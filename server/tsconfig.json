{
  "compilerOptions": {
    "target": "ES2020",

    "module": "CommonJS",

    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,

    "baseUrl": "src",
    "declaration": true,
    "declarationDir": "build",
    "declarationMap": true,

    "paths": {
      "@/*": ["*"]
    }
  }
}
